.l-footer
  z-index 3
  height 74px
  &__list-wrap
    border-top 1px solid color-black
    padding 32px 5.33vw
    +bp(pc)
      display flex
      justify-content space-between
      padding 40px
      
  &__main-list
    +bp(pc)
      display flex
      gap 56px
    &--title
      padding-left 12px
      border-left 1px solid color-black
      font-size 1.2rem
      margin 12px 0
    &--pages
      margin-top 16px
      +bp(pc)
        margin-top 44px
      .l-footer__list
        display grid
        grid-template-columns 1fr 1fr
        +bp(pc)
          display flex
          gap 56px
  &__sub-list
    margin-top 16px
    +bp(pc)
      margin-top 44px
      text-align right
    .l-footer__list
      display grid
      grid-template-columns 1fr 1fr
      +bp(pc)
        grid-template-columns 1fr
    a.l-footer__link,
    .l-footer__link
      font-weight 400
      font-size 1.2rem
      +bp(pc)
        font-size 1.4rem

  a&__link,
  &__link
    display block
    color color-black
    font-weight 700
    font-size 1.4rem
    padding 8px 0
    &:hover
      color color-blue-hover
    &--external
      font-weight 400
      position relative
      padding 8px 22px 8px 0
      &:hover
        &:after
          background url(/common/img/icon/small/blank_text_blue.svg) center center no-repeat
          background-size cover
      &:after
        content ''
        position absolute
        top 0
        bottom 0
        right 0
        width 14px
        height 14px
        margin auto
        background url(/common/img/icon/small/blank_text.svg) center center no-repeat
        background-size cover

  &__logo-area
    background linear-gradient(90deg, #00B3FE, #003399)
    
  &__logo-area-inner
    padding 17px 14px 26px 14px
    background url(/common/img/footer/bg-footer.png) bottom right no-repeat
    display grid
    +bp(pc)
      padding 20px 133px 20px 40px
      max-width 1920px
      margin 0 auto
      
  &__logo
    grid-column 1 / 2
    width 104px
    height 15px
    +bp(pc)
      width 160px
      height 100%
      grid-row 1 / 3
      display flex
      align-items center
    img
      vertical-align top
      width 100%
  &__catch
    grid-column 2 / 3
    width 140px
    height 15px
    display block
    margin-left auto
    +bp(pc)
      width 200px
      height 22px
    img
      width 100%
      vertical-align top

  &__copyright
    grid-column 1 / 3
    display block
    margin 4px 0 1px
    font-size 1.1rem
    text-align right
    color color-white
    line-height 1
    +bp(pc)
      font-size 1.2rem
      margin-top 2px
      grid-column 2 / 3
    