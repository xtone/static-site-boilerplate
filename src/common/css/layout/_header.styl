.l-header
  background color-white
  z-index 4
  &__gradation
    height 11px
    background background linear-gradient(90deg, #00B3FE, #003399)
    display flex
    justify-content flex-end
    +bp(pc)
      height 15px
    img
      height 11px
      width auto
      +bp(pc)
        height 15px
  &__logo-area
    height 48px
    display flex
    align-items center
    justify-content center
    +bp(pc)
      justify-content space-between
      padding 13px 16px
      max-width 1920px
      margin 0 auto

.header-logo
  display flex
  align-items center
  a
    display block
  img
    height 28px
    width auto
    +bp(se)
      height 25px
    +bp(pc)
      height 32px
      width auto


.l-header-sticky
  position sticky
  position -webkit-sticky
  top 0
  left 0
  right 0
  height 64px
  width 100%
  z-index 4
  margin 0 auto
  background color-white
  +bp(pc)
    height auto
    display flex
    align-items center
    justify-content space-between
  &__wrap
    display flex
    align-items center
    justify-content space-between
    width 100%
    height 100%
    +bp(pc)
      width auto
  a&__title,
  &__title
    flex-grow 2
    line-height 1
    padding-left 16px
    color color-black
    span
      font-size 1.1rem
      letter-spacing 0.025em
      +bp(pc)
        font-size 1.35rem

    p
      padding-top 6px
      font-size 1.8rem
      font-weight 700
      +bp(pc)
        font-size 2.2rem


.menu-trigger,
.menu-trigger span
  display inline-block
  transition all .4s

.menu-trigger
  display block
  position relative
  width 48px
  height 48px
  cursor pointer
  margin 0 1px 0 0
  z-index 1000
  
  +bp(se)
    margin 0 1px 0 5px
  +bp(pc)
    display none

  span
    position absolute
    left 15px
    height 2px
    background-color color-black
    &:nth-of-type(1)
      top 17px
      width 16px
    &:nth-of-type(2)
      top 23px
      width 16px
    &:nth-of-type(3)
      bottom 17px
      width 16px
  p
    position absolute
    bottom 1px
    left 0
    font-size 0.9rem
    font-weight bold
    color color-white
    width 100%
    text-align center

  &.open
    span
      left 13px
      &:nth-of-type(1)
        transform translateY(20px) rotate(-45deg)
        top 0
        width 20px
      &:nth-of-type(2)
        opacity 0
      &:nth-of-type(3)
        transform translateY(-20px) rotate(45deg)
        width 20px
        bottom 6px


.nav
  display none
  position absolute
  z-index 9999
  // background color-white
  background rgba(0,0,0,0.2)
  box-shadow (0px 2px 10px rgba(0,0,0,0.12))
  width 100%
  height 0
  opacity 0
  z-index 5
  +bp(pc)
    display block
    position static
    height auto
    width auto
    opacity 1
    box-shadow none
  &.show
    display block
    // height auto!important
    height 100vh!important
    overflow scroll
    animation fade-in .5s ease 0s 1 normal
    animation-fill-mode forwards
    +bp(pc)
      display none
  &.hide
    animation fade-out .5s ease 0s 1 normal
    animation-fill-mode forwards
    +bp(pc)
      animation none
  &__wrap
    padding 16px
    background color-white
    +bp(pc)
      padding 0
      display flex
  &__list
    margin-bottom 16px
    +bp(pc)
      display flex
      flex-direction column-reverse
      margin 0 20px 0 0
    &--main-menu,
    &--sub-menu
      +bp(pc)
        display flex
        gap 24px
        justify-content flex-end
    &--sub-menu
      .nav__link
        +bp(pc)
          font-size 1.2rem
          height 52px


  &__link
    height 54px
    display flex
    align-items center
    justify-content center
    gap 4px
    align-items center
    color color-black
    font-weight 700
    position relative
    &:before,
    &:after
      +bp(pc)
        content ''
        position absolute
        bottom 0
        height 4px
        width 0
        background color-white
    &:before
      +bp(pc)
        right 50%
    &:after
      +bp(pc)
        left 50%
    &, &:link, &:visited
      color color-black
      &:hover
        color color-blue-hover
        &:before,
        &:after
          +bp(pc)
            width 50%
            background color-blue
            transition all .3s ease
    &--current
      &:before,
      &:after
        +bp(pc)
          width 50%
          background color-blue



@keyframes fade-in
  0% 
    height 0
    opacity 0
  50% 
    opacity 1
  51%
    height 1px 
  99% 
    height 100vh
  100% 
    height 100vh
    opacity 1
  

@keyframes fade-out
  0%
    height 100vh
    opacity 1
  50%
    opacity 0
  99%
    height 100vh
    opacity 0
  100%
    height 0
    opacity 0
