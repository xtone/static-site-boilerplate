/* for print */
@media print
  body
    -webkit-print-color-adjust exact
    print-color-adjust exact


//
// basic
//

html
  font-size 62.5%
  height 100%

body
  color color-black
  font-size 1.4rem
  font-weight 400
  line-height 1.8
  font-family basic-font
  font-weight normal
  margin 0
  padding 0
  position relative
  background color-white
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust 100%
  @media (min-width: breakpoint-pc)
    font-size 1.6rem
    
& *
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box

h1, h2, h3, h4, h5, h6, p, ul, li, figure
  margin 0
  padding 0

h1, h2, h3, h4, h5, h6
  font-weight: bold

ul, li
  list-style: none

input, textarea, select
  -webkit-appearance none
  -moz-appearance none
  appearance none

button
  background-color transparent
  border none
  cursor pointer
  outline none
  padding 0
  appearance: none

a
  background-color transparent
a,
a:link,
a:visited
  outline none
  text-decoration none
  color color-link
  cursor pointer
  @media (min-width: breakpoint-sp)
    transition all .3s ease
    &:hover
      text-decoration none
      color color-link


img
  max-width 100%

.assistive_text
  display none

.supplement
  color color-text-sub
  font-size 1.2rem
  @media (min-width: breakpoint-pc)
    font-size 1.4rem
  &:before
    content 'â€»'
    padding-right 4px
    font-size 1.5rem
    line-height 1
    @media (min-width: breakpoint-pc)
      font-size 1.7rem

.link-target
  padding-top 80px
  margin-top -80px
  @media (min-width: breakpoint-pc)
    padding-top 120px
    margin-top -120px


.sp-block
  display block !important
  @media (min-width: breakpoint-pc)
    display none !important

.tab-none
  display block !important
  @media (min-width: breakpoint-tablet)
    display none !important

.tab-block
  display none !important
  @media (min-width: breakpoint-tablet)
    display block !important

.pc-block
  display none !important
  @media (min-width: breakpoint-pc)
    display block !important

.pc-max-block
  display none !important
  @media (min-width: breakpoint-pc-max)
    display block !important

.pc-l-none
  display block !important
  @media (min-width: breakpoint-pc-l)
    display none !important

.pc-max-none
  display block !important
  @media (min-width: breakpoint-pc-max)
    display none !important




